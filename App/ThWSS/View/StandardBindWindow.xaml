<Window x:Class="ThWss.View.StandardBindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="危险等级选择" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Grid MaxWidth="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Margin="5,10,5,0">
            <TextBlock TextWrapping="Wrap" Text="1. 当空间内存在吊顶且吊顶的通透面积比例低于70%时，喷淋的安装高度距梁较远，不需考虑梁的影响。" />
        </Label>
        <Label Grid.Row="1" Margin="5,10,5,0">
            <TextBlock TextWrapping="Wrap" Text="2. 当不存在吊顶或吊顶的通透面积比例高于70%时，喷淋的安装高度距梁较近，需考虑梁的影响。" />
        </Label>
        <Label Grid.Row="2" Margin="5,10">
            <TextBlock TextWrapping="Wrap" Text="3. 相关规范详见《GB50084-2017 自动喷水灭火系统设计规范》中7.1.6、7.1.13、7.2.1、7.2.3、7.2.5等条目。" />
        </Label>
    </Grid>
</Window>
