<UserControl x:Class="ThWSS.View.LayoutWayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThWSS.View"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Content="布置方式：" FontWeight="Bold" Margin="5,5,0,0"></Label>
        <Label Grid.Row="1" Content="喷头类型：" Margin="5,5,0,0"></Label>
        <RadioButton Grid.Row="1" Grid.Column="1" Margin="5,10,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Content="上喷"></RadioButton>
        <RadioButton Grid.Row="1" Grid.Column="2" Margin="5,10,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Content="下喷"></RadioButton>
    </Grid>
</UserControl>
