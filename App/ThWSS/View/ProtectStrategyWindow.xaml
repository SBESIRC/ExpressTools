<Window x:Class="ThWss.View.ProtectStrategyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="保护策略" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">

    <Grid  MaxWidth="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Margin="5,10,5,0">
            <TextBlock TextWrapping="Wrap" Text="1. 开敞的空间适合选择矩形保护；" />
        </Label>
        <Label Grid.Row="1" Margin="5,10">
            <TextBlock TextWrapping="Wrap" Text="2. 尺寸较小的空间，如走廊，适合选择半径保护" />
        </Label>
    </Grid>
</Window>
